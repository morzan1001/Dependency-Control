  "ignore_labels": [
    "ignore"
  ],
  "label_extractor": [
    {
      "pattern": "^(feat|feature|fix|bug|docs|style|refactor|perf|test|tests|chore|build|ci|revert)(?:\\(.+\\))?: .+$",
      "target": "$1",
